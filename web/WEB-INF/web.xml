<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ProductListController</servlet-name>
        <servlet-class>controller.product.List</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCartAddController</servlet-name>
        <servlet-class>controller.shoppingcart.Add</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCartViewController</servlet-name>
        <servlet-class>controller.shoppingcart.View</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InvoiceAddController</servlet-name>
        <servlet-class>controller.invoice.Add</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InvoiceSearchController</servlet-name>
        <servlet-class>controller.invoice.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>View</servlet-name>
        <servlet-class>controller.invoice.View</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductListController</servlet-name>
        <url-pattern>/product/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCartAddController</servlet-name>
        <url-pattern>/shoppingcart/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCartViewController</servlet-name>
        <url-pattern>/shoppingcart/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvoiceAddController</servlet-name>
        <url-pattern>/invoice/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvoiceSearchController</servlet-name>
        <url-pattern>/invoice/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>View</servlet-name>
        <url-pattern>/invoice/view</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
